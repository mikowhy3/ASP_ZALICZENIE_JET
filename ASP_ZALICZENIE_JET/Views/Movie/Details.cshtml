@using ASP_ZALICZENIE_JET.Models.Movies
@model ASP_ZALICZENIE_JET.Models.Movies.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTitle">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTitle" aria-expanded="false" aria-controls="collapseTitle">
                    @Html.DisplayNameFor(model => model.Title)
                </button>
            </h2>
            <div id="collapseTitle" class="accordion-collapse collapse" aria-labelledby="headingTitle" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Title)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingBudget">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBudget" aria-expanded="false" aria-controls="collapseBudget">
                    @Html.DisplayNameFor(model => model.Budget)
                </button>
            </h2>
            <div id="collapseBudget" class="accordion-collapse collapse" aria-labelledby="headingBudget" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Budget)</strong>
                </div>
            </div>
        </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="headingHomepage">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHomepage" aria-expanded="false" aria-controls="collapseHomepage">
                @Html.DisplayNameFor(model => model.Homepage)
            </button>
        </h2>
        <div id="collapseHomepage" class="accordion-collapse collapse" aria-labelledby="headingHomepage" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <strong>

                    @if (!string.IsNullOrWhiteSpace(Model.Homepage))
                    {
                    @Html.DisplayFor(model => model.Homepage)
                    }
                    else
                    {
                    <span>Brak</span>
                    }

                </strong>
            </div>
        </div>
    </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOverview">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOverview" aria-expanded="false" aria-controls="collapsePopularity">
                    @Html.DisplayNameFor(model => model.Overview)
                </button>
            </h2>
            <div id="collapseOverview" class="accordion-collapse collapse" aria-labelledby="headingPopularity" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Overview)</strong>
                </div>
            </div>
        </div>
       
    <div class="accordion-item">
            <h2 class="accordion-header" id="headingPopularity">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePopularity" aria-expanded="false" aria-controls="collapsePopularity">
                    @Html.DisplayNameFor(model => model.Popularity)
                </button>
            </h2>
            <div id="collapsePopularity" class="accordion-collapse collapse" aria-labelledby="headingPopularity" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Popularity)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingReleaseDate">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReleaseDate" aria-expanded="false" aria-controls="collapseReleaseDate">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </button>
            </h2>
            <div id="collapseReleaseDate" class="accordion-collapse collapse" aria-labelledby="headingReleaseDate" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.ReleaseDate)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingRevenue">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRevenue" aria-expanded="false" aria-controls="collapseRevenue">
                    @Html.DisplayNameFor(model => model.Revenue)
                </button>
            </h2>
            <div id="collapseRevenue" class="accordion-collapse collapse" aria-labelledby="headingRevenue" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Revenue)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingRuntime">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRuntime" aria-expanded="false" aria-controls="collapseRuntime">
                    @Html.DisplayNameFor(model => model.Runtime)
                </button>
            </h2>
            <div id="collapseRuntime" class="accordion-collapse collapse" aria-labelledby="headingRuntime" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.Runtime)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingMovieStatus">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMovieStatus" aria-expanded="false" aria-controls="collapseMovieStatus">
                    @Html.DisplayNameFor(model => model.MovieStatus)
                </button>
            </h2>
            <div id="collapseMovieStatus" class="accordion-collapse collapse" aria-labelledby="headingMovieStatus" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.MovieStatus)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTagline">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTagline" aria-expanded="false" aria-controls="collapseTagline">
                    @Html.DisplayNameFor(model => model.Tagline)
                </button>
            </h2>
            <div id="collapseTagline" class="accordion-collapse collapse" aria-labelledby="headingTagline" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    @if (!string.IsNullOrWhiteSpace(Model.Tagline))
                    {
                    @Html.DisplayFor(model => model.Tagline)
                    }
                    else
                    {
                    <span>Brak</span>
                    }
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingVoteAverage">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseVoteAverage" aria-expanded="false" aria-controls="collapseVoteAverage">
                    @Html.DisplayNameFor(model => model.VoteAverage)
                </button>
            </h2>
            <div id="collapseVoteAverage" class="accordion-collapse collapse" aria-labelledby="headingVoteAverage" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.VoteAverage)</strong>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingVoteCount">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseVoteCount" aria-expanded="false" aria-controls="collapseVoteCount">
                    @Html.DisplayNameFor(model => model.VoteCount)
                </button>
            </h2>
            <div id="collapseVoteCount" class="accordion-collapse collapse" aria-labelledby="headingVoteCount" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(model => model.VoteCount)</strong>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="infoAboutActors">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#inforAboutActors" aria-expanded="false" aria-controls="collapseActors">
                    Aktorzy
                </button>
            </h2>
            <div id="inforAboutActors" class="accordion-collapse collapse" aria-labelledby="infoAboutActors" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    @if (Model.MovieCasts != null && Model.MovieCasts.Any())
                    {
                    @foreach (var movieCast in Model.MovieCasts)
                    {
                    <p>
                        <strong>@movieCast.Person.PersonName</strong> jako @movieCast.CharacterName
                    </p>
                    }
                    }
                    else
                    {
                    <p>Brak aktorów w tym filmie.</p>
                    }
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="infoAboutPersons">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#inforAboutPersons" aria-expanded="false" aria-controls="collapsePersons">
                    Osoby związane z filmem
                </button>
            </h2>
            <div id="inforAboutPersons" class="accordion-collapse collapse" aria-labelledby="infoAboutPersons" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    @if (Model.Persons != null && Model.Persons.Any())
                    {
                    @foreach (var person in Model.Persons)
                    {
                    <p>@person.PersonName</p>
                    }
                    }
                    else
                    {
                    <p>Brak osób związanych z tym filmem.</p>
                    }
                </div>
            </div>
        </div>
        

    </dl>
    <div> 
       
        <a asp-action="AddActor" asp-route-id="@Model?.MovieId">DodajAktora</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
